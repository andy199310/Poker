<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".MainActivity">


    <HorizontalScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/horizontalScrollView"
            android:layout_alignParentTop="true"
            android:layout_marginRight="158dp">

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:id="@+id/op_layout">

        </LinearLayout>
    </HorizontalScrollView>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/turnText"
            android:layout_marginBottom="25dp"
            android:layout_alignBottom="@+id/horizontalScrollView"
            android:layout_centerHorizontal="true"/>

    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/player0"
            android:layout_marginRight="21dp"
            android:src="@drawable/c000"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"/>

    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/player3"
            android:src="@drawable/c000"
            android:layout_centerVertical="true"
            android:layout_alignRight="@+id/player0"
            android:layout_marginRight="21dp"/>

    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/player1"
            android:src="@drawable/c000"
            android:layout_alignTop="@+id/player3"
            android:layout_alignParentRight="true"/>

    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/player2"
            android:src="@drawable/c000"
            android:layout_alignBottom="@+id/horizontalScrollView"
            android:layout_alignLeft="@+id/player0"/>
</RelativeLayout>